<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}iVarotra website{% endblock %}</title>
        {% block stylesheets %}
          <style>
            th,tr{
              text-align:center;
            }
            body{
              padding-top:1%;
            }
          </style>
        {% endblock %}
        <link rel="stylesheet" href="//cdn.datatables.net/1.10.10/css/jquery.dataTables.min.css"/>
        <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}" type="text/css" />  
        <link rel="stylesheet" href="{{ asset('bootstrap/css/datepicker.css') }}" type="text/css" />       
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
        <script type="text/javascript">
          $(function(){
            var check = $(".datepicker").datepicker();
            $(".datepicker").on('changeDate',function(){
              $(".datepicker").datepicker('hide');
            });
          })
        </script>
  {% block javascripts %}
  {% endblock %}
    </head>
    <body class="container">

        <!--SLIDER-->
        <div id="monslider" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#monslider" data-slide-to="0" class="active"></li>
            <li data-target="#monslider" data-slide-to="1"></li>
            <li data-target="#monslider" data-slide-to="2"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <img src="{{ asset('images/banniere11.jpg') }}" alt="OrdiPortable">
              <div class="carousel-caption" style="background-color:black;opacity:0.3">
                ORDINATEUR PORTABLE
              </div>
            </div>
            <div class="item">
              <img src="{{ asset('images/banniere14.jpg') }}" alt="Montre">
              <div class="carousel-caption" style="background-color:black;opacity:0.3">
                MONTRE
              </div>
            </div>
            <div class="item">
              <img src="{{ asset('images/banniere12.jpg') }}" alt="Appelectro">
              <div class="carousel-caption" style="background-color:black;opacity:0.3">
                APPAREIL ELECTRONIQUE
              </div>
            </div>
          </div>

          <!-- Controls -->
          <a class="left carousel-control" href="#monslider" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#monslider" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <!--MENU-->
        <nav class="navbar navbar-inverse" role="navigation">
            <!-- container permet d'aligner le contenu du menu avec le contenu de la page --> 
                <div class="navbar-header"> 
                    <a class="navbar-brand" href="{{ path('homepage') }}">iVarotra</a> 
                </div> 
            
            <!-- ajout possible de texte --> 
            <p class="navbar-text">the best quality of products</p>

                <!-- pull-right décale les éléments du menu sur la droite
                     pull-left sur la gauche --> 
                <ul class="nav navbar-nav pull-left"> 
                     <li><a href="{{ path('homepage') }}"><span class="glyphicon glyphicon-home"></span>Accueil</a></li> 
                     <li><a href="{{ path('fos_user_security_login') }}"><span class="glyphicon glyphicon-user"></span>Connexion</a></li> 
                </ul>
        </nav> 

            {% block body %}{% endblock %}
         <hr/>   
        <div class="footer" align="center">
            Copyright &copy; iVarotra - {{ "now"|date('Y')}}
        </div>
          <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
          <script src="//cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js"></script>
          <script src="{{ asset('bootstrap/js/bootstrap-datepicker.js') }}"></script>
    </body>
</html>
