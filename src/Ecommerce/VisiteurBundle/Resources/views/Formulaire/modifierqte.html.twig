                                                <a href="{{ path('visiteur_affichelistepanier') }}" class="btn btn-info">Annuler</a>
                                            </div>
                                        </div>
                                    </form>                          
                          </div>
                        </div>
                {% endfor %}
            </div>
    {% endblock %}