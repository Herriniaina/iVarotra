 {% extends '::template.html.twig' %}
    {% block body %}
            <div style="margin:auto;width:90%">
                {% for prod in prods %}
                        <div class="panel panel-primary" align="center">
                          <div class="panel-heading">
                            <h3 class="panel-title">{{prod.libelleProduit}}</h3>
                          </div>
                          <div class="panel-body">
                            <img src="{{ asset('uploads/') ~ prod.image.chemin }}" alt="" class="img-responsive"><hr>
                            <b>Prix : {{prod.prixunitaire}} â‚¬</b><hr>
                            {{prod.description}}
                          </div>
                          <div class="panel-footer">
                                    <form class="form-inline" method="post" action="{{ path('visiteur_ajoutpanier') }}">
                                        <div class="form-group">
                                            <label>QTE</label><input type="text" name="qte" value="1" class="form-control">
                                            <input type="text" name="idProd" value="{{ prod.id }}" hidden="hidden"/>
                                            <button type="submit" class="btn btn-primary">Ajouter au panier</button>
                                            <a href="{{ path('homepage') }}" class="btn btn-info">Retour</a>
                                        </div>
                                    </form>                          
                          </div>
                        </div>
                {% endfor %}
                </div>
    {% endblock %}